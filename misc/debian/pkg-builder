#!/usr/bin/php

<?php

$opt = getopt("r:");
$rel = isset($opt['r']) ? intval($opt['r']) : '1';

$arch = trim(shell_exec("arch"));

if ($arch != "x86_64") {
    die("The architecture of the operating system does not support: $arch");
}

$basedir = realpath(__DIR__.'/../..');

$cmd = "cd $basedir/deps/redis\n
    make\n
    cp -rp ./src/redis-server $basedir/bin/hooto-keeper-store ";
shell_exec($cmd);

$ver = file_get_contents($basedir."/src/version.go");
if (!preg_match("/VERSION\ +string\ +\=\ +\"(.*)\"/", $ver, $mat)) {
    die("Can not get version");
}
$ver = $mat[1];


$cmd = "rm -rf /tmp/hooto-keeper
mkdir -p /tmp/hooto-keeper/DEBIAN";
shell_exec($cmd);


$file = "{$basedir}/misc/debian/control";
$control = file_get_contents($file);
$mat = array(
    "/Version:\ +(.*?)\n/",
    "/Architecture:\ +(.*?)\n/",
);
$rep = array(
    "Version: {$ver}-{$rel}\n",
    "Architecture: amd64\n",
);
$control = preg_replace($mat, $rep, $control);
file_put_contents("/tmp/hooto-keeper/DEBIAN/control", $control);


$cmd = "
mkdir -p /tmp/hooto-keeper/opt/hooto/keeper/bin
cp $basedir/bin/* /tmp/hooto-keeper/opt/hooto/keeper/bin/
cp $basedir/src/hooto-keeper /tmp/hooto-keeper/opt/hooto/keeper/bin/

mkdir -p /tmp/hooto-keeper/etc/init.d
cp $basedir/misc/debian/init.d-scripts /tmp/hooto-keeper/etc/init.d/hooto-keeper
chmod +rx /tmp/hooto-keeper/etc/init.d/hooto-keeper

mkdir -p /tmp/hooto-keeper/opt/hooto/keeper/etc
cp $basedir/misc/redis/redis.conf /tmp/hooto-keeper/opt/hooto/keeper/etc/redis.conf
cp $basedir/misc/keeper/keeper.json /tmp/hooto-keeper/opt/hooto/keeper/etc/keeper.json

mkdir -p /tmp/hooto-keeper/opt/hooto/keeper/var

dpkg -b /tmp/hooto-keeper/ $basedir/hooto-keeper_{$ver}-{$rel}_d6_amd64.deb

rm -rf /tmp/hooto-keeper";

shell_exec($cmd);

exit(0);
